<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
    <title>Document</title>
    <style>
        @font-face {
            font-family: 'text';
            src: url('/font/Lato-BlackItalic.ttf');
        }

        @font-face {
            font-family: 'text2';
            src: url('/font/Oswald-Bold.ttf');
        }

        @keyframes marquee {
            0% {
                transform: translateX(100%);
            }

            100% {
                transform: translateX(-100%);
            }
        }

        .marquee {
            animation: marquee 6s linear infinite;
        }

        .pause:hover .marquee {
            animation-play-state: paused;
        }
    </style>
</head>

<body>
    <main class="w-full h-screen ">
        <% if(error.length> 0){%>
            <div class="absolute top-0 left-[40%]">
                <p class="bg-red-500 font-bold text-white px-2 py-2 text-center rounded-md">
                    <%= error %>
                </p>
            </div>
            <%}%>
                <% if(success.length> 0){%>
                    <div class="absolute top-0 left-[40%]">
                        <p class="bg-blue-500 font-bold text-white px-2 py-2 text-center rounded-md">
                            <%= success %>
                        </p>
                    </div>
                    <%}%>
                        <%- include('partials/header') %>
                            <div class="w-full mt-3 relative">
                                <img class="w-full h-full object-cover"
                                    src="https://images.meesho.com/images/marketing/1746425994914.webp" alt="">
                                <div class="absolute top-20 right-42">
                                    <h1 class=" text-white font-bold text-4xl font-['text']">Brand New <br> Collection
                                    </h1>
                                    <a href="#hero"><button
                                            class="py-2 px-8 bg-white mt-4 rounded-md cursor-pointer text-2xl font-['text']">Shop
                                            More</button></a>
                                </div>
                            </div>
                            <div class="overflow-hidden whitespace-nowrap py-2 pause bg-[#F0E9FF]">
                                <div
                                    class="bg-white ml-5 cursor-pointer inline-block marquee text-blue-800 text-lg font-medium px-4 w-38 h-22 flex items-center justify-center rounded-md shadow-xl">
                                    <img class="mt-2"
                                        src="https://images.meesho.com/images/marketing/1743159363205.webp" alt="">
                                </div>
                                <div
                                    class="bg-white ml-5 cursor-pointer inline-block marquee text-blue-800 text-lg font-medium px-4 w-38 h-22 rounded-md shadow-xl">
                                    <img class="w-full h-full object-cover"
                                        src="https://images.meesho.com/images/marketing/1743159393231.webp" alt="">
                                </div>
                                <div
                                    class="bg-white ml-5 cursor-pointer inline-block marquee text-blue-800 text-lg font-medium px-4 w-38 h-22 rounded-md shadow-xl">
                                    <img class="w-full h-[80%] mt-3 object-cover"
                                        src="https://images.meesho.com/images/marketing/1744636558884.webp" alt="">
                                </div>
                                <div
                                    class="bg-white ml-5 cursor-pointer inline-block marquee text-blue-800 text-lg font-medium px-4 w-38 h-22 rounded-md shadow-xl">
                                    <img class="w-full h-[80%] mt-3 object-cover"
                                        src="https://images.meesho.com/images/marketing/1743159377598.webp" alt="">
                                </div>
                                <div
                                    class="bg-white ml-5 cursor-pointer inline-block marquee text-blue-800 text-lg font-medium px-4 w-38 h-22 rounded-md shadow-xl">
                                    <img class="w-full h-full"
                                        src="https://images.meesho.com/images/marketing/1743159415385.webp" alt="">
                                </div>
                                <div
                                    class="bg-white ml-5 cursor-pointer inline-block marquee text-blue-800 text-lg font-medium px-4 w-38 h-22 rounded-md shadow-xl">
                                    <img class="w-full h-[50%] mt-5"
                                        src="https://images.meesho.com/images/marketing/1744636599446.webp" alt="">
                                </div>
                                <div
                                    class="bg-white ml-5 cursor-pointer inline-block marquee text-blue-800 text-lg font-medium px-4 w-38 h-22 rounded-md shadow-xl">
                                    <img class="w-full h-full"
                                        src="https://images.meesho.com/images/marketing/1743159302944.webp" alt="">
                                </div> 
                            </div>

                            
                            <div id="hero" class="mt-10 flex gap-2 flex-wrap p-5 gap-5 items-center justify-center">
                                <% product.forEach((prod)=>{%>
                                    <a href="/products/<%= prod._id %>">
                                        <div class="w-[25vw] shadow-xl rounded-2xl overflow-hidden p-2">
                                            <img src="data:image/jpeg;base64,<%= prod.image.toString('base64')%>"
                                                class="object-cover w-[22vw] h-[24vw] m-auto" alt="">
                                            <div class=" p-2">
                                                <div>
                                                    <h1 id="title" class="font-[text] text-zinc-500">
                                                        <%= prod.name.substring(0, 32) %>...
                                                    </h1>
                                                    <h2 class="text-[20px] font-[text]">â‚¹ <%= prod.price %>
                                                    </h2>
                                                    <div
                                                        class="py-1 w-20 mt-2 flex items-center justify-center rounded-full bg-zinc-100">
                                                        <h1 class="text-[12px] font-[text] text-zinc-500">Free Delivery
                                                        </h1>
                                                    </div>
                                                    <div
                                                        class="py-1 w-15 mt-4 bg-[#038D63] rounded-full flex items-center justify-center">
                                                        <h1 class="text-white text-[15px]">4.1 <i
                                                                class="ri-star-fill"></i></h1>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                    <%}) %>
                            </div>
                            <%- include('partials/footer') %>
    </main>
</body>

</html>